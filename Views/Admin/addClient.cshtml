@model Omar_EAD_Term_Project.Models.dataClass
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Client</title>
    <script type="text/javascript" src="js/Myriad_Pro_600.font.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {

            $('#checking').hide();
            $('#registerbtn').hide();

            $('#UserName').focusout(function () {

                var userName = $('#UserName').val();
                $('#checking').show();
                $.getJSON("/login/CheckUserName?UserName=" + userName, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("User already exists in database");

                    }
                    else {
                        $('#result').text("User Name is available");
                        $('#registerbtn').show();
                    }
                });
            });
        });
    </script>
</head>
<body id="page2">
    <!-- content -->
    <section id="content">
        

            <h2>Registration Form</h2>
        <div align="center">
            <form id="ContactForm" method="post" action="/admin/insertClient">
                <div>
                    <div class="wrapper"><input type="text" class="input" id="UserName" name="UserName">Username:<br /></div><div id="checking">Checking...</div>
                    <div id="result"></div>
                    <div class="wrapper"><input type="text" class="input" name="dc.c.name">Name:<br /></div>
                    <div class="wrapper"><input type="text" class="input " name="dc.c.email">E-mail:<br /></div>
                    <div class="wrapper"><input type="text" class="input" name="dc.c.address">Address:<br /></div>
                    <div class="wrapper"><input type="text" class="input" name="dc.c.phno">Phone #:<br /></div>
                    <div class="wrapper"><input type="text" class="input" name="dc.u.pwd">Password:<br /></div>
                    <input type="submit" id="registerbtn" value="Add" class="button" />
                </div>
            </form>
        </div>
    </section>
    <!-- / content -->
</body>
</html>