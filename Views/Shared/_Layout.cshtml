<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/reset.css" type="text/css" media="all">
    <link rel="stylesheet" href="~/Content/layout.css" type="text/css" media="all">
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" media="all">
    <script type="text/javascript" src="~/Scripts/cufon-yui.js"></script>
    <script type="text/javascript" src="~/Scripts/cufon-replace.js"></script>
    <script type="text/javascript" src="~/Scripts/Myriad_Pro_600.font.js"></script>
    <script src="~/Scripts/jquery-1.4.2.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="~/Scripts/jquery.bxslider.min.js"></script>
    <link href="~/Content/jquery.bxslider.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery.bxslider.js"></script>*@
   
    <script>
        $(document).ready(function () {
            $('.bxslider').bxSlider({
                auto: true,
                autoControls: true,
                //captions: true,
                //default: null,
                mode: 'fade',
                //captions: true,
                //useCSS: false,
                infiniteLoop: true,
                //hideControlOnEnd: true,
                //easing: 'easeOutElastic',
                //speed: 2000
            });
        });
    </script>
    <script>

    </script>
</head>
<body id="page1">
    <div class="extra">
        <div class="main">
            <!-- header -->
            <header> 
                <div class="wrapper">
                    
                    <h1><img src="~/images/logo.jpg" /></h1>
                    <div class="right">
                        <div class="wrapper">
                            <div class="bg">
                                <br/><br />
                                <a href="/Home/clientSearch" class="button">Search</a>
                         </div>
                            
                        </div>
                        <br />
                        <div class="wrapper">
                            <nav>
                                <ul id="top_nav">
                                    
                                    @if(Session["login"]==null)
                                    { 
                                        <li><a href="/login/Register">Register</a></li>
                                        <li><a href="/login/LoginClient">Log In</a></li>
                                        <li><a href="/login/LoginAdmin">Admin</a></li>
                                    }
                                    else
                                    {
                                        @*<li>@Html.ActionLink("GOOGLE", "")</li>*@
                                        <li><a href="/login/logout">Logout</a></li>
                                        if (Session["login"] == "Admin")
                                        {
                                            <li><a href="/Admin/SettingsAdmin">Settings</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/Client/SettingsClient">Settings</a></li>
                                        }
                                        
                                    }
                                    


                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <nav>
                    <ul id="menu">
                        
                        @if (Session["login"] == "Admin")
                        {
                            <li><a href="/Home/AdminHome" class="nav1">Home&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                        }
                        else
                        {
                            <li><a href="/Home/index" class="nav1"> Home &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                        }
                        <li><a href="/Home/About" class="nav2"> About   Us &nbsp;&nbsp;</a></li>
                        <li><a href="/tour/Tours" class="nav3"> Tours &nbsp;&nbsp;</a></li>
                        <li><a href="/Place/Destinations" class="nav4"> Destination &nbsp; &nbsp;&nbsp;</a></li>
                        <li class="end"><a href="/Home/Contact" class="nav5"> Contact &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </a></li>
                      </ul>
                </nav>
                
                <!-- <script src="/js/plugins/jquery.easing.1.3.js"></script> must be included in the <head>
    after the jQuery library, and before the jquery.bxslider.js file. See the source code
    of this page for an example. -->
                <ul class="bxslider">
                    <li><img src="~/images/slider1.JPG" /></li>
                    <li><img src="~/images/slider2.JPG" /></li>
                    <li><img src="~/images/slider3.JPG" /></li>
                    <li><img src="~/images/slider4.JPG"/></li>
                    <li><img src="~/images/slider5.JPG"  /></li>
                    <li><img src="~/images/slider6.JPG"  /></li>

                </ul>
            </header>

            
            <!-- / header -->
            <!-- content -->
            @RenderBody()
            <!-- / content -->
        </div>
        <div class="block"></div>
    </div>
    <div class="body1">
        <div class="main">
            <!-- footer -->
            <footer>
                <div class="col-lg-12">
                    <p>Copyright &copy; Omar Iqbal 2015</p>
                </div>
            </footer>
            <!-- / footer -->
        </div>
    </div>
    <script type="text/javascript"> Cufon.now(); </script>
</body>
</html>
